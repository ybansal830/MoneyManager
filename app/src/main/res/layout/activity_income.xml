<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Income"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/salary"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/salary"
        android:background="@drawable/categorybackground"
        app:layout_constraintTop_toBottomOf="@+id/tvTop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/awards"/>

    <TextView
        android:id="@+id/tvSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salary"
        app:layout_constraintEnd_toStartOf="@+id/tvAwards"/>

    <ImageButton
        android:id="@+id/awards"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/awards"
        android:background="@drawable/categorybackground"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/salary"
        app:layout_constraintTop_toBottomOf="@+id/tvTop"
        app:layout_constraintEnd_toStartOf="@+id/grants"/>

    <TextView
        android:id="@+id/tvAwards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awards"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/tvSalary"
        app:layout_constraintTop_toBottomOf="@+id/awards"
        app:layout_constraintEnd_toStartOf="@+id/tvGrants"/>

    <ImageButton
        android:id="@+id/grants"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/grants"
        android:background="@drawable/categorybackground"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/awards"
        app:layout_constraintTop_toBottomOf="@+id/tvTop"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvGrants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grants"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/tvAwards"
        app:layout_constraintTop_toBottomOf="@+id/grants"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/sale"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/sale"
        android:background="@drawable/categorybackground"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salary"
        app:layout_constraintEnd_toStartOf="@+id/rental"/>

    <TextView
        android:id="@+id/tvSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sale"
        app:layout_constraintEnd_toStartOf="@+id/tvRental"/>

    <ImageButton
        android:id="@+id/rental"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/rental"
        android:background="@drawable/categorybackground"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/sale"
        app:layout_constraintTop_toBottomOf="@+id/awards"
        app:layout_constraintEnd_toStartOf="@+id/refunds"/>

    <TextView
        android:id="@+id/tvRental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rental"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/tvSale"
        app:layout_constraintTop_toBottomOf="@+id/rental"
        app:layout_constraintEnd_toStartOf="@+id/tvRefunds"/>

    <ImageButton
        android:id="@+id/refunds"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/refunds"
        android:background="@drawable/categorybackground"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/rental"
        app:layout_constraintTop_toBottomOf="@+id/grants"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvRefunds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refunds"
        app:layout_constraintStart_toEndOf="@id/tvRental"
        app:layout_constraintTop_toBottomOf="@+id/refunds"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/lottery"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/lottery"
        android:background="@drawable/categorybackground"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sale"
        app:layout_constraintEnd_toStartOf="@+id/investments"/>

    <TextView
        android:id="@+id/tvLottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lottery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottery"
        app:layout_constraintEnd_toStartOf="@+id/tvInvestments"/>

    <ImageButton
        android:id="@+id/investments"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/investments"
        android:background="@drawable/categorybackground"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/lottery"
        app:layout_constraintTop_toBottomOf="@+id/rental"
        app:layout_constraintEnd_toStartOf="@+id/others"/>

    <TextView
        android:id="@+id/tvInvestments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Investments"
        app:layout_constraintStart_toEndOf="@id/tvLottery"
        app:layout_constraintTop_toBottomOf="@+id/investments"
        app:layout_constraintEnd_toStartOf="@+id/tvOthers"/>

    <ImageButton
        android:id="@+id/others"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/others"
        android:background="@drawable/categorybackground"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/investments"
        app:layout_constraintTop_toBottomOf="@+id/refunds"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvOthers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        app:layout_constraintStart_toEndOf="@id/tvInvestments"
        app:layout_constraintTop_toBottomOf="@+id/others"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/ibShowSelect"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/others"
        android:background="@drawable/categorybackground"
        app:layout_constraintTop_toBottomOf="@+id/tvInvestments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvShowSelect"
        android:text="Others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibShowSelect"/>

    <EditText
        android:id="@+id/etEnterAmount"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        app:layout_constraintTop_toBottomOf="@+id/tvLottery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibShowSelect"
        android:inputType="numberDecimal"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/etEnterDate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Enter Date"
        app:layout_constraintTop_toBottomOf="@+id/tvOthers"
        app:layout_constraintStart_toEndOf="@+id/ibShowSelect"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"/>

    <EditText
        android:id="@+id/etEnterComment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Enter Comment"
        app:layout_constraintTop_toBottomOf="@+id/ibShowSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textColor="@color/white"
        android:background="@drawable/btndatebackground"
        app:layout_constraintTop_toBottomOf="@+id/etEnterComment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>